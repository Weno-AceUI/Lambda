** --- 2. Classes and Instances --- **
print ""; ** empty line for spacing **
print "--- Testing Classes ---";

class Point {
    init(x, y) {
        this.x = x;
        this.y = y;
    }

    move(dx, dy) {
        this.x = this.x + dx;
        this.y = this.y + dy;
    }

    static origin() {
        return Point(0, 0);
    }
}

let p1 = Point(3, 4);
p1.move(7, -2);
print "Moved point: " + p1.x + ", " + p1.y; ** Should be 10, 2 **

